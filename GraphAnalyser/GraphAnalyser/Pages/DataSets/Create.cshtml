@page
@model GraphAnalyser.Pages.DataSets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>DataSet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataSet.Name" class="control-label"></label>
                <input asp-for="DataSet.Name" class="form-control" />
                <span asp-validation-for="DataSet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputFile" class="control-label"></label>
                <input asp-for="InputFile" type="file" class="form-control" style="height:auto" />
                <span asp-validation-for="InputFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
