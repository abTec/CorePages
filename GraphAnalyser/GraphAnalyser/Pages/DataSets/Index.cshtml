@page
@model GraphAnalyser.Pages.DataSets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>List of DataSets</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataSet[0].Hash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataSet[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataSet[0].NumberOfUsers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataSet[0].InseretedDateUtc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DataSet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfUsers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InseretedDateUtc)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
